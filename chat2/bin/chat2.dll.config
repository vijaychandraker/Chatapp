<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<connectionStrings>
		<!-- Update the connection string with your SQL Server details -->
		<add name="ChatAppConnection"
			 connectionString="Data Source=DESKTOP-GLH31EV\SQLEXPRESS;Initial Catalog=ChatAppDB2;Integrated Security=True"
			 providerName="System.Data.SqlClient" />
		<!-- For SQL Server Authentication use:
    <add name="ChatAppConnection" 
         connectionString="Data Source=ServerName;Initial Catalog=ChatAppDB;User ID=sa;Password=yourpassword" 
         providerName="System.Data.SqlClient" />
    -->
	</connectionStrings>

	<appSettings>
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
	</appSettings>

	<system.web>
		<compilation debug="true" targetFramework="4.8.1" />
		<httpRuntime targetFramework="4.8.1" maxRequestLength="52428800" executionTimeout="3600" />

		<!-- Authentication Configuration -->
		<authentication mode="Forms">
			<forms loginUrl="~/Login.aspx" timeout="30" slidingExpiration="true" />
		</authentication>

		<!-- Session Configuration -->
		<sessionState mode="InProc" timeout="30" />

		<!-- Custom Error Pages -->
		<customErrors mode="Off" />

		<!-- Pages Configuration -->
		<pages controlRenderingCompatibilityVersion="4.0" />
	</system.web>

	<system.webServer>
		<!-- Allow large file uploads (50 MB) -->
		<security>
			<requestFiltering>
				<requestLimits maxAllowedContentLength="52428800" />
			</requestFiltering>
		</security>

		<!-- Enable Ajax -->
		<handlers>
			<remove name="ExtensionlessUrlHandler-Integrated-4.0" />
			<remove name="OPTIONSVerbHandler" />
			<remove name="TRACEVerbHandler" />
			<add name="ExtensionlessUrlHandler-Integrated-4.0"
				 path="*."
				 verb="*"
				 type="System.Web.Handlers.TransferRequestHandler"
				 preCondition="integratedMode,runtimeVersionv4.0" />
		</handlers>
	</system.webServer>

